<div class="side-panel bg-body border-end border-bottom" id="side-panel">
    <a class="fs-5" href="/home">Home</a>
    <a class="fs-5" href="/meals">Meals</a>
</div>

<script>
    // script.js
    document.getElementById('hamburger').addEventListener('click', function () {
        var sidePanel = document.getElementById('side-panel');
        sidePanel.classList.toggle('open');
    });

    var sidePanelLinks = document.querySelectorAll('.side-panel a');
    sidePanelLinks.forEach(function (link) {
        link.addEventListener('click', function () {
            var sidePanel = document.getElementById('side-panel');
            sidePanel.classList.remove('open');
        });
    });
</script>
