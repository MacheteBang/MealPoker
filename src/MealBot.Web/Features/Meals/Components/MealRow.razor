<div class="border rounded-2 w-100 p-2">
    <div class="row">
        <div class="col">
            <h4>@Meal.Name</h4>
        </div>
        <div class="col-auto">
            <button class="btn btn-sm btn-danger" @onclick="Delete">X</button>
        </div>
    </div>
    <p class="text-secondary">@Meal.Description</p>
    @foreach (var mealPart in Meal.MealParts ?? [])
    {
        <MealPartRow MealPart="mealPart" />
    }
</div>

@code
{
    [Parameter]
    public required MealResponse Meal { get; set; }
    [Parameter]
    public EventCallback<MealResponse> OnDelete { get; set; }

    private async Task Delete()
    {
        await OnDelete.InvokeAsync(Meal);
    }
}